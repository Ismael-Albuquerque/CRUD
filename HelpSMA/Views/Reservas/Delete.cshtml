@model HelpSMA.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}


<!DOCTYPE html>
<html>
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <title>Excluir Requisição</title>
</head>
<body style="padding-top:10px">

    <div class=" card text-center">
        <div class=" bg-light mb-3">
            <div class="card-header">
                <div class="logo">
                    <img src="~/css/imagens/Logo.png" class="card-img"
                         style="float: left; margin-right: auto;  position:center; height:70px; width:50px; margin-left:auto" />
                </div>
                <br />
                <b>HELP DESK - Seção de Meios Auxiliares (SMA)</b>
                <br />
                <br />
            </div>
        </div>
    </div>

    <div class=" container">

        <div class=" form-group">

            <div class=" col-md-12">

                <h4>Excluir Requisição</h4>
                <br />
                <p class=" card-text">Confirmar Exclusão?</p>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Item)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Item)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Data)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Horário)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Horário)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Solicitante)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Solicitante)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Ramal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ramal)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Seção)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Seção)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Mensagem)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Mensagem)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Situação)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Situação)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ReservaId" />
                    <input type="submit" value="Excluir" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </form>
            </div>
        </div>
    </div>

    <div class=" card text-left ">
        <div class=" bg-light mb-3">
            <div class=" card-footer text-muted">

                © 2020 Ismael Albuquerque

            </div>
        </div>
    </div>
</body>
</html>
